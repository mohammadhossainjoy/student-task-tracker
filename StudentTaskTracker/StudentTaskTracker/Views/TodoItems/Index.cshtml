@model IEnumerable<StudentTaskTracker.Models.TodoItem>

@{
    ViewBag.Title = "Tasks";
}

<div class="card shadow-lg border-0 rounded">
    <div class="card-body">
        <h2 class="mb-4 text-primary fw-bold">📋 Task List</h2>

        <!-- 🔍 Search Form -->
        @using (Html.BeginForm("Index", "TodoItems", FormMethod.Get))
        {
            <div class="input-group mb-3">
                <input type="text" name="q" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Search tasks by title or notes..." />
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </div>
        }

        <!-- Create Button -->
        <p>
            @Html.ActionLink("➕ Create New Task", "Create", null, new { @class = "btn btn-primary mb-3" })
        </p>

        <!-- Task Table -->
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-primary text-dark">
                <tr>
                    <th>
                        @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSort, q = ViewBag.CurrentFilter })
                    </th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>
                        @Html.ActionLink("Due Date", "Index", new { sortOrder = ViewBag.DateSort, q = ViewBag.CurrentFilter })
                    </th>
                    <th>Created At</th>
                    <th style="width:220px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.Title</td>
                        <td>@item.Notes</td>
                        <td>
                            @if (item.IsDone)
                            {
                                <span class="badge bg-success px-3 py-2">✔ Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark px-3 py-2">⏳ Pending</span>
                            }
                        </td>
                        <td>@(item.DueDate.HasValue ? item.DueDate.Value.ToString("dd MMM yyyy") : "")</td>
                        <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-secondary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
